
<button class="button is-primary edit-btn" data-reviewId="<%= review.id%>"> Edit</button>
<div class="modal" id="<%=review.id%>">
    <div class="modal-background" id="edit-modal-background"></div>
    <div class="modal-content">
        <div class="box modal-box">
            <form action="/reviews/<%= review.id%>/edit?_method=PUT" method="POST" >
                <div class="field">
                    <label class="label" for="review-rating"> Rating </label>
                    <div class="control"> 
                        <input 
                        class="input"
                        type="number"
                        name="rating"
                        id="review-rating"
                        min="1"
                        max="5"
                        value="<%= review.rating %>" 
                        placeholder="1-5"
                        />
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="review-content">Content</label>
                    <div class="control">
                        <textarea class="textarea" name="content" id="review-content" value ="<%= review.content %>" placeholder ="<%= review.content %>"></textarea>
                    </div>
                </div>
                <button class="button mt-4" id="edit-submit">Submit</button>
            </form>
            <button class="modal-close is-large" id="edit-close" 
            aria-label="close">
            </button>
        </div>
    </div>
</div>

