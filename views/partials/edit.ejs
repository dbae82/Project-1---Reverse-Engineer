<button class="button edit-btn" data-reviewId="<%= review.id%>"> Edit</button>
<div class="modal edit-modal" id="<%=review.id%>">
    <div class="modal-background" id="edit-modal-background"></div>

    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Edit Review</p>
            <button class="delete" aria-label="close" id="edit-cancel" data-reviewId="<%= review.id%>"></button>
        </header>
        <section class="modal-card-body">
            <form action="/reviews/<%= review.id%>/edit?_method=PUT" method="POST">
                <div class="field">
                    <label class="label" for="review-rating"> Rating </label>
                    <div class="control">
                        <input class="input" type="number" name="rating" id="review-rating" min="1" max="5"
                            value="<%= review.rating %>" placeholder="1-5" />
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="review-content">Content</label>
                    <div class="control">
                        <textarea class="textarea" name="content" placeholder="<%= review.content %>!"
                            id="review-content" value="<%= review.content %>"><%= review.content %></textarea>
                    </div>
                </div>


        </section>
        <footer class="modal-card-foot">
            <button class="button is-success" id="edit-submit">Submit</button>
        </footer>
        </form>
    </div>



</div>